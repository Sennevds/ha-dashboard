{
  "home_assistant": {
    "url": "http://homeassistant.local:8123",
    "token": ""
  },
  "cookbook": {
    "url": "http://cookbook.local"
  },
  "mqtt": {
    "enabled": false,
    "broker": "homeassistant.local",
    "port": 1883,
    "username": "",
    "password": "",
    "topic_prefix": "tablet"
  },
  "presence_detection": {
    "enabled": true,
    "detection_mode": "both",
    "detection_confidence": 0.5,
    "check_interval_ms": 1000,
    "presence_timeout_seconds": 30
  },
  "screen": {
    "turn_off_when_no_presence": true,
    "dim_brightness_when_no_presence": false,
    "dim_level": 20,
    "normal_brightness": 100
  },
  "shortcuts": {
    "switch_app": "F1",
    "exit_fullscreen": "F11",
    "quit_app": "Ctrl+Q"
  },
  "updates": {
    "enabled": true,
    "check_on_startup": true,
    "auto_install": false,
    "current_version": "1.0.0",
    "repo_url": "Sennevds/ha-dashboard"
  }
}
